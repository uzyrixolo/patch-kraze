    }
  ]
}
{% endschema %}

<style>
  .explore-products-section {
    width: 100%;
    background-color: #fff;
    padding: 2.5rem 1rem;
  }
  .explore-container {
    max-width: 1152px;
    margin: 0 auto;
    padding: 0 1rem; 
  }
  
  .explore-heading {
    font-size: 1.875rem; /* 3xl */
    font-weight: 700;
    color: #000;
    margin-bottom: 3rem;
  }
  
  .explore-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }
  @media (min-width: 768px) {
    .explore-grid { grid-template-columns: repeat(3, 1fr); }
  }
  
  .explore-card {
    position: relative;
    border-radius: 1rem; /* rounded-2xl */
    overflow: hidden;
    height: 24rem; /* h-96 */
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    background-color: #000;
  }
  
  .explore-bg-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }
  .explore-card:hover .explore-bg-img {
    transform: scale(1.05);
  }
  
  .explore-overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0,0,0,0.4);
    transition: background-color 0.3s;
  }
  .explore-card:hover .explore-overlay {
    background-color: rgba(0,0,0,0.5);
  }
  
  .explore-content {
    position: relative;
    z-index: 10;
    padding: 1.5rem;
  }
  
  .explore-title {
    font-size: 1.5rem; /* 2xl */
    font-weight: 700;
    color: #fff;
    margin-bottom: 0.75rem;
  }
  .explore-desc {
    color: rgba(255,255,255,0.9);
    font-size: 0.875rem; /* sm */
    margin-bottom: 1.5rem;
    line-height: 1.625;
  }
  
  .btn-explore {
    background-color: #4ade80; /* green-400 */
    color: #000;
    font-weight: 600;
    padding: 0.5rem 1.5rem;
    border-radius: 0.5rem; /* rounded-lg */
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.2s;
  }
  .btn-explore:hover {
    background-color: #22c55e; /* green-500 */
  }

  /* Sustainability block */
  .sustain-block {
    border: 1px solid #e5e7eb; /* gray-200 */
    border-radius: 0.5rem;
    padding: 1.5rem;
  }
  .sustain-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  @media (min-width: 768px) {
    .sustain-grid { grid-template-columns: repeat(3, 1fr); }
    .sustain-col-mid {
       border-left: 1px solid #e5e7eb;
       border-right: 1px solid #e5e7eb;
    }
  }

  .sustain-col {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .sustain-left {
    justify-content: flex-start;
    gap: 0.75rem;
  }
  
  .leaf-icon-box {
    width: 2.5rem;
    height: 2.5rem;
    background-color: #22c55e;
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  .leaf-emoji { font-size: 1.125rem; color: #fff; }

  .sustain-text-sm { font-size: 0.875rem; font-weight: 600; color: #000; }
  .sustain-stat-lg { font-size: 1.5rem; font-weight: 700; color: #000; }
  .sustain-caption { font-size: 0.875rem; color: #4b5563; }
  .text-center { text-align: center; }

</style>

