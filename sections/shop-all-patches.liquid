    background-color: #fff;
    padding: 5rem 1rem;
    font-family: 'Inter', sans-serif !important;
  }
  .shop-patches-container {
    max-width: 1152px; /* max-w-6xl */
    margin: 0 auto;
    padding: 0 1rem; 
  }
  .shop-patches-heading {
    font-size: 1.25rem; /* xl */
    font-weight: 700;
    text-align: left;
    margin-bottom: 2rem;
    color: #000;
  }
  
  .patch-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem; /* gap-4 */
  }
  @media (min-width: 768px) {
    .patch-grid { gap: 2rem; } /* md:gap-8 */
  }
  @media (min-width: 1024px) {
    .patch-grid { grid-template-columns: repeat(4, 1fr); } 
  }
  
  .patch-card {
    display: flex;
    flex-direction: column;
  }
  
  .patch-image-wrapper {
    position: relative;
    margin-bottom: 1rem;
    background-color: #f3f4f6; /* gray-100 */
    border-radius: 0.5rem; /* rounded-lg */
    overflow: hidden;
    aspect-ratio: 1/1;
    cursor: pointer;
  }
  
  .patch-img-container {
    position: absolute;
    inset: 0;
  }
  
  .patch-static-img, .patch-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    inset: 0;
  }
  
  .patch-static-img {
    z-index: 10;
    transition: opacity 0.3s;
  }
  
  /* Hover effect: Hide image to show video underneath */
  .patch-image-wrapper:hover .patch-static-img {
    opacity: 0;
  }
  
  .patch-video {
    z-index: 0; 
  }

  .patch-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    background-color: #14b8a6; /* teal-500 */
    color: #fff;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem; /* sm */
    font-weight: 600;
    z-index: 20;
  }
  
  .patch-title {
    font-size: 1.125rem; /* lg */
    font-weight: 700;
    color: #000;
    margin-bottom: 0.5rem;
  }
  .patch-price {
    color: #0d9488; /* teal-600 */
    font-weight: 600;
    margin-bottom: 0.75rem;
  }
  .patch-desc {
    color: #4b5563; /* gray-600 */
    font-size: 0.875rem; /* sm */
    margin-bottom: 1rem;
    flex-grow: 1;
  }
  
  .btn-customize {
    background-color: #000;
    color: #fff;
    padding: 0.5rem 1.5rem;
    border-radius: 0.25rem;
    font-weight: 600;
    transition: background-color 0.2s;
    width: fit-content; /* w-fit */
    display: inline-block;
    text-decoration: none;
    border: none;
    cursor: pointer;
  }
  .btn-customize:hover {
    background-color: #1f2937; /* gray-800 */
  }
</style>

