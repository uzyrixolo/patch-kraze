<style>
  .testimonials-section {
    width: 100%;
    background-color: #000;
    overflow: hidden;
    padding: 4rem 0;
  }
  
  .testimonials-header {
    text-align: center;
    margin-bottom: 5rem;
    padding: 0 1rem;
  }
  .testimonials-title {
    font-size: 3rem; /* 5xl */
    font-weight: 700;
    color: #fff;
    margin-bottom: 1rem;
    line-height: 1.1;
  }
  .testimonials-subtitle {
    font-size: 1.125rem; /* lg */
    color: #9ca3af; /* gray-400 */
  }

  /* Marquee Containers */
  .marquee-container {
    width: 100%;
    overflow: hidden;
    padding: 1.5rem 0;
    display: flex;
    position: relative;
    margin-bottom: 2rem;
  }

  .marquee-content {
    display: flex;
    gap: 1.5rem; /* 6 (24px) */
    animation: marquee 120s linear infinite; /* Increased duration for smoother scroll */
    flex-shrink: 0;
  }
  
  .marquee-content.reverse {
     animation-direction: reverse;
  }

  .marquee-content:hover {
    animation-play-state: paused;
  }

  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); } 
  }
  
  /* Testimonial Card Styles (Scoped from Snippet) */
  .testimonial-card {
    flex-shrink: 0;
    width: 20rem; /* 80 (320px) */
    background-color: #111827; /* gray-900 */
    border: 1px solid #1f2937; /* gray-800 */
    border-radius: 0.5rem;
    padding: 1.5rem;
    transition: border-color 0.2s;
  }
  .testimonial-card:hover {
    border-color: #374151; /* gray-700 */
  }

  .stars-row {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 1rem;
  }
  .star-icon {
    color: #facc15; /* yellow-400 */
    fill: #facc15;
    width: 20px;
    height: 20px;
  }

  .client-name {
    color: #fff;
    font-weight: 600;
    margin-bottom: 0.25rem;
    font-size: 1rem;
  }

  .verified-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-size: 0.875rem; /* sm */
  }
  .check-icon {
    color: #22c55e;
    width: 16px;
    height: 16px;
  }
  .verified-text {
    color: #9ca3af; /* gray-400 */
  }

  .review-text {
    color: #d1d5db; /* gray-300 */
    font-size: 0.875rem; /* sm */
    line-height: 1.625;
  }
</style>

